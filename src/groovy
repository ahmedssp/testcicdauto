pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        git branch: 'master', url: 'https://github.com/ahmedssp/cicddevops'
      }
    }

    stage('Build') {
      steps {
        bat 'mvn clean package -Dmaven.test.failure.ignore=true'
      }
    }

    stage('Test Results') {
      steps {
        junit '**/target/surefire-reports/*.xml'
      }
    }
  }
}
